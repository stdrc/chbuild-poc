{
    "name": "hello-chpm++",
    "version": "1.0.0",
    "description": "Test C++ program for ChPM",
    "dependencies": [
        "libstdc++"
    ],
    "docker_builder": "ipads/chcore_builder:v3.0",
    "working_dir": "$CHPM_BUILD_DIR",
    "build": [
        "$CHPM_RECIPE_DIR/build.sh"
    ],
    "install": [
        "mkdir -p $CHPM_TARGET_PREFIX/apps",
        "cp $CHPM_BUILD_DIR/hello-chpm++ $CHPM_TARGET_PREFIX/apps"
    ]
}