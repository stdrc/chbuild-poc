{
    "name": "ros2",
    "version": "0.0.0",
    "description": "ROS2",
    "dependencies": [],
    "source_files": [
        {
            "url": "http://192.168.10.245:20002/source/chcore-modified/ros2/ros2.tar.gz",
            "name": "ros2.tar.xz",
            "extract_dir": "ros2"
        }
    ],
    "docker_builder": "ipads/chcore_builder:v1.2-for-ros-build",
    "working_dir": "$CHPM_BUILD_DIR",
    "build": [
        "$CHPM_RECIPE_DIR/build.sh"
    ],
    "install": [
        "mkdir -p $CHPM_TARGET_PREFIX/lib",
        "cp sysroot/lib/*.so* $CHPM_TARGET_PREFIX/lib",
        "cp install/lib/*.so* $CHPM_TARGET_PREFIX/lib",
        "mkdir -p $CHPM_TARGET_PREFIX/apps/ros2",
        "cp -r install/lib/demo_nodes_cpp/* $CHPM_TARGET_PREFIX/apps/ros2",
        "cp -r install/lib/examples_rclcpp_minimal_action_client/* $CHPM_TARGET_PREFIX/apps/ros2",
        "cp -r install/lib/examples_rclcpp_minimal_action_server/* $CHPM_TARGET_PREFIX/apps/ros2"
    ]
}